<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="style.css" >
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
    <title>CS260 Chat</title>
  </head>

  <body>
    <div class="container-fluid" id="main-container">
      <div id="header-block"></div>
        <div class="jumbotron jumbotron-fluid text-center fixed-top">
            <h1>CS260 Chat</h1>
        <nav class="navbar justify-content-center" id="username-nav">
          <form class="form-inline" id="change_username">
        <input class="form-control" id="username" type="text" placeholder="Anonymous" />
        <button class="btn btn-primary" id="send_username" type="submit">Change username</button>
        <button class="btn btn-primary" id="load_history" type="button">Begin Chat</button>
          </form>
        </nav>
              <section id="feedback"></section>
        </div>


        


        <div class="container" id="chatroom-container">
        
            <section id="chatroom">
            </section>
            
        </div>
        
            <!-- This div is used to prevent messages being eclipsed by the fixed-bottom form -->
            <div id="footer-block"></div>
            
            <div class="fixed-bottom" id="form-container" hidden="true">
                <form id="input_zone">
                    <div class="form-group">
                        <label for="email">Message:</label>
                        <input type="text" class="form-control" id="message" placeholder="Enter your message" name="message">
                    </div>
                    <button type="submit" id="send_message" class="btn btn-primary">Send</button>
                </form>
            </div>

    </div>
    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
    <script src="chat.js"></script>
  </body>
</html>